{
  "database": {
    "pool": {
      "maxConnections": 10,
      "minConnections": 2,
      "connectionTimeout": 30000,
      "idleTimeout": 300000
    }
  },
  "cache": {
    "redis": {
      "host": "localhost",
      "port": 6379,
      "enableFallback": true,
      "defaultTTL": 3600
    }
  },
  "security": {
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "slowDown": {
      "windowMs": 900000,
      "delayAfter": 50,
      "delayMs": 500
    }
  },
  "monitoring": {
    "logLevel": "info",
    "enableMetrics": true,
    "slowQueryThreshold": 1000
  }
}