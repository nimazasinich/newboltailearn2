# Persian Legal AI - Environment Variables Template
# Copy this file to .env and configure for your environment

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
APP_NAME=persian-legal-ai
APP_VERSION=1.0.0

# ============================================
# Server Configuration
# ============================================
# Backend server port (default: 3000)
PORT=3000
BACKEND_PORT=3000

# Frontend ports
FRONTEND_PORT=80
FRONTEND_DEV_PORT=5173
NGINX_PORT=8080

# ============================================
# Database Configuration
# ============================================
# SQLite database path (container path)
DATABASE_PATH=/data/database.sqlite
SQLITE_PATH=/data/database.sqlite

# Database connection pool settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_ACQUIRE_TIMEOUT=30000

# ============================================
# Authentication & Security
# ============================================
# JWT Secret - MUST CHANGE IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_chars

# JWT Token expiration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session secret
SESSION_SECRET=your_session_secret_change_this_in_production_minimum_32_chars

# Password hashing rounds
BCRYPT_ROUNDS=10

# ============================================
# CORS Configuration
# ============================================
# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost,http://localhost:3000,http://localhost:5173,http://localhost:8080

# CORS credentials
CORS_CREDENTIALS=true

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Base path for deployment (e.g., /app for subdirectory deployment)
VITE_BASE_PATH=/

# ============================================
# Redis Cache Configuration (Optional)
# ============================================
# Redis connection
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL settings (in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SESSION=86400
CACHE_TTL_STATIC=604800

# ============================================
# TensorFlow.js Configuration
# ============================================
# Model paths
TF_MODEL_PATH=/app/models
TF_BACKEND=cpu

# GPU configuration (for GPU profile)
CUDA_VISIBLE_DEVICES=0
TF_FORCE_GPU_ALLOW_GROWTH=true

# ============================================
# Monitoring & Logging
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FILE=/logs/app.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=10

# Monitoring endpoints
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# Rate Limiting
# ============================================
# API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size (in bytes)
MAX_FILE_SIZE=104857600
# Allowed file types
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf

# Upload directory
UPLOAD_DIR=/app/uploads

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email from address
EMAIL_FROM=noreply@persian-legal-ai.com

# ============================================
# External Services (Optional)
# ============================================
# OpenAI API (if using)
OPENAI_API_KEY=

# Google Cloud (if using)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gcp-key.json

# AWS (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# Development Configuration
# ============================================
# Hot reload for development
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# Debug settings
DEBUG=express:*
DEBUG_COLORS=true

# ============================================
# Docker Configuration
# ============================================
# Docker build args
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Container restart policy
RESTART_POLICY=unless-stopped

# ============================================
# Performance Tuning
# ============================================
# Node.js memory limit (in MB)
NODE_OPTIONS=--max-old-space-size=2048

# Worker threads
WORKER_THREADS=4

# Cluster mode
CLUSTER_ENABLED=false
CLUSTER_WORKERS=auto